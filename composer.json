{
    "name": "karuna/fountain",
    "description": "A PHP parser for Fountain, a simple markup syntax that allows screenplays to be written, edited, and shared in plain, human-readable text.",
    "type": "library",
    "license": "MIT",
    "keywords": ["fountain","markdown","screenplay"],
    "authors": [
        {
            "name": "Daniel Shields",
            "email": "daniel@karuna.co.za",
            "homepage": "https://www.karuna.co.za",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/tao/fountain",
        "issues": "https://github.com/tao/fountain/issues"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*"
    },
    "autoload": {
        "psr-4": {
            "Fountain\\": "src/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.23",
        "phpunit/phpunit": "^10.3"
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "code:fix": [
            "vendor/bin/php-cs-fixer fix ./src --rules=@PSR12"
        ]
    }
}
